#!/bin/bash
PROGRAM="$(basename $0)"

temp="$(mktemp -d)"

cd $temp

if [ ! -z $1 ] && [ -n "$1" ]
then
    ak-zchain-extract-cids $1 > to_stats
else
    ak-zchain-extract-cids > to_stats
fi

sum=0 ; while IFS="" read -r p || [ -n "$p" ]
do
    if [ "$p" != "" ]
    then
        ak-ipfs-get $p
        num="$(du -bs --apparent-size $p | cut -d $'\t' -f 1)"
    else
        num=0
    fi
	sum=$(expr $sum + $num )
done < to_stats
echo "Chain is : $sum bytes"

cd ~
rm -rf $temp
