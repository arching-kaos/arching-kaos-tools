#!/bin/bash
##
## Brief description
##
## Usage:
##
##    -h, --help                  Prints this help message
##
fullprogrampath="$(realpath $0)"
PROGRAM=$(basename $0)
descriptionString="Quick description"

# At least these
source $AK_LIBDIR/_ak_log
source $AK_LIBDIR/_ak_script
source $AK_LIBDIR/_ak_zblock

# Your stuff here...
example(){
    echo "Example"
}

# Flags to run
if [ ! -z $1 ]; then
    case $1 in
        -h | --help) _ak_usage; exit;;
        -s | --show)
            _ak_zblock_show $2
            exit
            ;;
        -x | --gen-html)
            _ak_zblock_gen_html $2
            exit
            ;;
        -c | --cache)
            _ak_zblock_gen_html $2
            exit
            ;;
        -p | --pack)
            _ak_zblock_pack $2
            exit
            ;;
        -a | --announce)
            _ak_zblock_announce $2
            exit
            ;;
        * ) _ak_usage;;
    esac
else _ak_usage
fi
