PROGRAM="$(basename $0)"

source $AK_LIBDIR/_ak_log
source $AK_LIBDIR/_ak_ipfs

screen -dmS akipfsd _ak_ipfs_daemon
if [ $? -ne 0 ]
then
    _ak_log_error "Failed to start IPFS daemon"
    exit 1
fi
