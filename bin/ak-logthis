#!/bin/bash
TS="$(date -u +%s)"
if  [ ! -z "$1" ]
then
    if [ ! -z "$2" ]
    then
        if [ ! -z "$3" ]
        then
            echo "$TS" "$1" "$2" "$3" >> $AK_LOGSFILE
            exit 0
        else
            echo "$TS" "$1" "[ERROR]" "No message" >> $AK_LOGSFILE
            exit 1
        fi
    else
        echo "$TS" "$1" "[ERROR]" "No type and message" >> $AK_LOGSFILE
        exit 1
    fi
else
    echo "$TS" "<$(basename $0)>" "[ERROR]" "No arguments given" >> $AK_LOGSFILE
    exit 1
fi

